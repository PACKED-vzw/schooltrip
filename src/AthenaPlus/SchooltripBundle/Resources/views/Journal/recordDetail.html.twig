<div class="tab_record" id="tab_record_{{ tab_id }}_{{ record.id }}" title="{{ record.id }}" data-tab="{{ tab_id }}">
    <div class="panel panel-default">
        <button type="button" class="close close-record" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div class="tab_schedule_ctn">
            <label class="inline-label" for="time_{{ tab_id }}_{{ record.id }}">Time</label>
            <input type="text" id="time_{{ tab_id }}_{{ record.id }}" class="form-control schedule-time" placeholder="00:00" value="{{ time }}">
        </div>
        <div class="panel-heading record-heading" id="record-heading-{{ tab_id }}-{{ record.id }}" title="{{ record.id }}" data-tab="{{ tab_id }}">
            <h4>{{ record.title }} </h4> ( added by <span class="label label-default">{{ record.user }}</span> )

        </div>

        <div class="panel-body record-body hidden" id="record-body-{{ tab_id }}-{{ record.id }}" data-tab="{{ tab_id }}"  title="{{ record.id }}">
            <p>
                {{ record.text }}
            </p>
            <h4>Resources</h4>
            <ul class="list-group">


                <div class="panel panel-default">
                    <div class="panel-heading">Links</div>

                    <div class="panel-body">
                        <ul>
                        {% for item in record.items  %}
                            {% if item.type == "url" %}
                            <li>{{ item.value }} | {{ item.resource }}</li>
                            {% endif %}
                        {% endfor %}
                        </ul>
                    </div>

                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">Media</div>
                    <div class="panel-body">
                        <ul>
                            {% for item in record.items  %}
                                {% if item.type == "media" %}

                                    <p>{{ item.value }}<br/>
                                    {% for resource in item.resource %}
                                        <img src="{{resource.src}}" title="{{ resource.id }}" alt="{{ item.value }}">
                                    {%  endfor %}
                                    </p>

                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>

                </div>
            </ul>


            <div class="tab_extra_ctn">
                <h3>Extra content for this record</h3>
                <div class="bs-callout bs-callout-info">
                    Click on the coverflow above to select images or click on the button below to add embedded media (google maps, youtube, soundcloud, flickr, ...)
                    <br/>
                    <a class="btn btn-theme btn-add-extra" data-toggle="modal" data-target="#modal-extra">Add extra</a>

                </div>
                <div class="well" id="tab_extra_{{ tab_id }}_{{ record.id }}">

                </div>
            </div>





            <div class="tab_remarks_ctn">
                <label for="remarks_{{ tab_id }}_{{ record.id }}">Remarks</label>
                <textarea id="remarks_{{ tab_id }}_{{ record.id }}" class="wysiwyg form-control" placeholder="remarks">{{ remarks }}</textarea>
            </div>

        </div>

    </div>
</div>