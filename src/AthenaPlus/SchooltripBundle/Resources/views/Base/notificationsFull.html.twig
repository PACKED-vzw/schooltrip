{% extends '::base.html.twig' %}

{% block contents -%}
<div class="row">
    <div class="col-md-12 pagetitle">
        <h2><span>Notifications</span></h2>
    </div>
</div>


<div class="row">

    <div class="col-md-12 community">


<ul id="community-posts" class="timeline2" data-offset="10">
    {% for notification in notifications | reverse %}

        <li class="timeline2-inverted">
            <div class="timeline2-badge"><i class="glyphicon glyphicon-user"></i></div>
            <div class="timeline2-panel">
                <div class="timeline2-body">
                    <p class="timeline2-date">{{ notification.created |date("d/m/Y H:m:s") }}
                    <p>{{ notification.message | raw  }}</p>

                </div>
            </div>
        </li>
    {%  endfor %}

</ul>

    </div>

</div>
{%  endblock %}