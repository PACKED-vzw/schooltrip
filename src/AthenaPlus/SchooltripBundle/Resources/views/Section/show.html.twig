{% extends '::base.html.twig' %}

{% block contents -%}
    <h1>Section</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Sources</th>
                <td>{{ entity.sources }}</td>
            </tr>
            <tr>
                <th>Parameters</th>
                <td>{{ entity.parameters }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('section') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('section_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
