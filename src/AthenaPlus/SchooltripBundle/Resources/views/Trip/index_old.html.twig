{% extends '::base.html.twig' %}

{% block contents -%}
    <h1><span class="inside-heading">Trip list</span></h1>

    <table class="trips-list table">
        <thead>
            <tr>
                <th ></th>
                <th data-sort="string"><span class="table-heading">Title</span></th>
                <th data-sort="string"><span class="table-heading">Location</span></th>
                <th data-sort="date"><span class="table-heading">Date</span></th>
                <th data-sort="string"><span class="table-heading">Group</span></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.departure }} - {{ entity.destination }}</td>
                <td>21-12-1984</td>
                <td>{{ entity.ageGroup }}</td>
                <td>
                    <a class="btn btn-trip" href="{{ path('trip_edit', { 'id': entity.id }) }}">Edit</a>
                    <a class="btn btn-trip" href="{{ path('trip_show', { 'id': entity.id }) }}">Manage parameters</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="btn btn-theme" href="{{ path('trip_new') }}">
        Create a new trip
    </a

    {% endblock %}

    {%  block javascripts %}
        {{ parent() }}
        <script type="text/javascript">
            $('.trips-list').stupidtable();
        </script>

    {%  endblock %}
