{% extends '::base.html.twig' %}

{%  block contents %}
    <div id="login-box">
        <div class="login-screen">

            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="login-form" >
                    <div class="form-group">
                        <input type="text" class="form-control login-field" value="" placeholder="Gebruikersnaam" id="username" name="_username"/>
                        <label class="login-field-icon fui-user" for="login-name"></label>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control login-field" value="" placeholder="Wachtwoord" id="password" name="_password"  type="password" />
                        <label class="login-field-icon fui-lock" for="login-pass"></label>
                    </div>

                    <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                    <label for="remember_me" class="checkbox" id="label_remember_me">Ingelogd blijven</label>

                    <input type="submit" class="btn btn-primary btn-lg btn-block" id="_submit" name="_submit" value="Inloggen" >
                    <a class="login-link" href="#">Wachtwoord vergeten?</a>
                </div>
            </form>
        </div>
    </div>

{% endblock %}